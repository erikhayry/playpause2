{{#if error}}
    <div class="alert alert-danger" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close" {{action "closeAlert" 'error'}}>
            <span aria-hidden="true">&times;</span>
        </button>
        {{error}}
    </div>
{{/if}}

{{#if info}}
    <div class="alert alert-info" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close" {{action "closeAlert" 'info'}}>
            <span aria-hidden="true">&times;</span>
        </button>
        {{info}}
    </div>
{{/if}}


<div class="row">
    <div class="col-8">
        <div class="text-left">
            {{input class="form-control" value=browserUrl placeholder="url"}}
        </div>
    </div>
    <div class="col-4">
        <div class="text-left">
            <button class="btn btn-primary btn-block" {{action "loadUrl" browserUrl}}>Go</button>
        </div>
    </div>
</div>

<br>

<div class="text-center">
 {{ember-webview
         onReady='onWebviewReady'
         url=guestUrl
 }}
</div>

<br>

<div class="row">
    <div class="offset-sm-8 col-sm-4">
        <button class="btn btn-primary btn-block" {{action "findCandidates" guestUrl}} disabled={{disabled-with-or isLoading candidates.length}}>Find Play Button</button>
    </div>
</div>

<br>

{{add-station-dialog
        candidates=candidates
        saveCandidate="saveCandidate"
        candidateSelected="candidateSelected"
}}
