{{#if error}}
    <div class="alert alert-danger" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close" {{action "closeAlert" 'error'}}>
            <span aria-hidden="true">&times;</span>
        </button>
        {{error}}
    </div>
{{/if}}

{{#if info}}
    <div class="alert alert-info" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close" {{action "closeAlert" 'info'}}>
            <span aria-hidden="true">&times;</span>
        </button>
        {{info}}
    </div>
{{/if}}

<div class="form-group row">
    <div class="col-12">
        {{input class="form-control" value=name placeholder="SR"}}
    </div>
</div>

<div class="row">
    <div class="col-8">
        <div class="text-left">
            {{input class="form-control" value=url placeholder="url"}}
        </div>
    </div>
    <div class="col-4">
        <div class="text-left">
            <button class="btn btn-primary btn-block" {{action "loadUrl" url}}>Go</button>
        </div>
    </div>
</div>

<br>

<div class="text-center">
 {{ember-webview
         onReady='onWebviewReady'
         url=guestUrl
 }}
</div>


{{#bs-tab as |tab|}}
    {{#tab.pane title="Play/Pause"}}
        {{code-editor
                value=playPauseAction
                action="playPauseAction"
                update="update"
        }}
    {{/tab.pane}}
    {{#tab.pane title="Stop"}}
        {{code-editor
                value=stopAction
                action="stopAction"
                update="update"
        }}
    {{/tab.pane}}
    {{#tab.pane title="Next"}}
        {{code-editor
                value=nextAction
                action="nextAction"
                update="update"
        }}
    {{/tab.pane}}
    {{#tab.pane title="Previous"}}
        {{code-editor
                value=previousAction
                action="previousAction"
                update="update"
        }}
    {{/tab.pane}}
{{/bs-tab}}

<br>

<div class="form-group row">
    <div class="offset-sm-2 col-sm-10">
        <button class="btn btn-primary btn-block" {{action "save" name url playPauseAction stopAction nextAction previousAction}}>Save station</button>
    </div>
</div>
