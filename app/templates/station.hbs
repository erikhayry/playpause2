<div class="l-station">
    <div class="l-station-header text-center">
        <h1>
            {{model.name}}
        </h1>
        <div class="text-uppercase">
            <span class="{{if model.previousAction "" "text-muted"}} {{if previousActionActive "text-info" ""}}">Previous</span>
            <span class="{{if model.playPauseAction "" "text-muted"}} {{if playPauseActionActive "text-info" ""}}">Play/Pause</span>
            <span class="{{if model.stopAction "" "text-muted"}} {{if stopActionActive "text-info" ""}}">Stop</span>
            <span class="{{if model.nextAction "" "text-muted"}} {{if nextActionActive "text-info" ""}}">Next</span>
        </div>
    </div>

    <div class="l-station-body">
        {{play-guest class="text-center"
                     stationUrl=model.url
                     stationPlayPauseAction=model.playPauseAction
                     stationStopAction=model.stopAction
                     stationNextAction=model.nextAction
                     stationPreviousAction=model.previousAction
                     activeAction="activeAction"
        }}
    </div>

    <div class="l-station-footer">
        <div class="row">
            <div class="col-sm-6">
                {{#link-to "stations" class="btn btn-default"}}
                    Back
                {{/link-to}}
            </div>
            <div class="col-sm-6 text-right">
                {{#link-to "edit-scripted-station" model.id class="btn btn-default"}}Edit{{/link-to}}
                <button class="btn btn-danger" {{action "removeStation" model.id}}>Remove</button>
            </div>
        </div>
    </div>
</div>
