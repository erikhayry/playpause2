<div class="row">
    <div class="col-sm-12">
        <div class="text-right">
            {{#link-to "add-scripted-station" class="btn btn-primary"}}
                Add Station
            {{/link-to}}
        </div>
    </div>
</div>

<br>

<h2 class="text-center">Stations</h2>
<ul class="list-group">
    {{#each model as |station|}}
        <li class="list-group-item">
            <div class="d-flex w-100 justify-content-between">
                {{#link-to "station" station.id}}{{station.name}}{{/link-to}}
                <button class="btn btn-danger" {{action "removeStation" station.id}}>Remove</button>
            </div>
        </li>
    {{/each}}
</ul>



